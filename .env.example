# ============================================================
# Makilab Agent — Environment Variables
# Copy to .env and fill in your values
# ============================================================

# ── LLM ──────────────────────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=sk-or-...

# ── WhatsApp ─────────────────────────────────────────────────
WHATSAPP_ALLOWED_NUMBER=33XXXXXXXXX@s.whatsapp.net

# ── Agent ────────────────────────────────────────────────────
AGENT_MAX_ITERATIONS=10
NODE_ENV=development

# ── Database ─────────────────────────────────────────────────
POSTGRES_PASSWORD=makilab_dev
DATABASE_URL=postgresql://makilab:makilab_dev@localhost:5432/makilab

# ── Storage ──────────────────────────────────────────────────
MINIO_ROOT_USER=makilab
MINIO_ROOT_PASSWORD=makilab_dev_secret

# ── Security ─────────────────────────────────────────────────
WEBHOOK_SECRET=change_me_in_production

# ── CRON (E6) ────────────────────────────────────────────────
CRON_ENABLED=false
CRON_CHANNEL=whatsapp
CRON_BRIEFING_SCHEDULE=0 7 * * *
CRON_EVENING_SCHEDULE=0 19 * * *

# ── Subagents ────────────────────────────────────────────────

# Web (E4)
BRAVE_SEARCH_API_KEY=BSA...

# Karakeep (E4)
KARAKEEP_API_URL=http://localhost:3000
KARAKEEP_API_KEY=ak_...

# Obsidian (E4)
OBSIDIAN_VAULT_PATH=/path/to/vault
OBSIDIAN_REST_API_KEY=...

# Gmail (E4 squelette, E8 OAuth2)
GMAIL_ACCESS_TOKEN=...

# Home Assistant (E10)
HA_URL=http://homeassistant.local:8123
HA_ACCESS_TOKEN=...

# ── Semantic Memory (E9) ─────────────────────────────────────
QDRANT_URL=http://localhost:6333
VOYAGE_API_KEY=pa-...

# ── Code SubAgent (E11) ──────────────────────────────────────
# CODE_REPO_ROOT=        # défaut: racine du monorepo (auto-détecté)
# MAKILAB_ENV=development  # development | production

# ── MCP Bridge (E13) ─────────────────────────────────────────
# Config dans mcp-servers.json à la racine du repo
# Les secrets MCP vont ici :

# Google Calendar
# GOOGLE_OAUTH_CLIENT_ID=...
# GOOGLE_OAUTH_CLIENT_SECRET=...
# GOOGLE_OAUTH_REFRESH_TOKEN=...

# NotebookLM (auth via headless Chrome, pas de clé API)
# Voir: npx notebooklm-mcp-auth

# Indeed (auth via cookie session Claude.ai)
# INDEED_SESSION_TOKEN=...

# ── API Port ─────────────────────────────────────────────────
# MAKILAB_API_PORT=3100
